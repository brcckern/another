<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Soru (<%= questionNumber %>/<%= questionAmount %>) :: <%= exam.title %></h5>
            <% if (questions.questionContent) { %>
                <p class="card-text"><%= questions.questionContent %></p>
            <% } %>
            <p class="card-text"><b><%= questions.question %></b></p>
            <form action="" method="post">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="answer" id="firstOption" value="<%= questions.firstOption %>" required>
                    <label class="form-check-label" for="firstOption"><%= questions.firstOption %></label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="answer" id="secondOption" value="<%= questions.secondOption %>" required>
                    <label class="form-check-label" for="secondOption"><%= questions.secondOption %></label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="answer" id="thirdOption" value="<%= questions.thirdOption %>" required>
                    <label class="form-check-label" for="thirdOption"><%= questions.thirdOption %></label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="answer" id="fourthOption" value="<%= questions.fourthOption %>" required>
                    <label class="form-check-label" for="fourthOption"><%= questions.fourthOption %></label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="answer" id="fifthOption" value="<%= questions.fifthOption %>" required>
                    <label class="form-check-label" for="fifthOption"><%= questions.fifthOption %></label>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Ä°leri</button>
            </form>
        </div>
    </div>
</div>