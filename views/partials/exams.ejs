<div class="card mb-3">
    <div class="row">
        <div class="col-md-5">
            <img src="/images/<%= exam.image %>" alt="" class="img-fluid" style="border-top-left-radius: 3px; border-bottom-left-radius: 3px;">
        </div>
        <div class="col-md-7">
            <div class="card-body">
                <h5 class="card-title"><%= exam.title %></h5>
                <p class="card-text"><%= exam.description %></p>
                <% if (exam.examFinishedNumber == 0) { %>
                    <p class="card-text">(Bu sınav henüz hiç çözülmemiş.)</p>
                <% } else { %>
                    <p class="card-text">(Bu sınav <%= exam.examFinishedNumber %> kere çözülmüş.)</p>
                <% } %>
                <a href="/sinavlar/<%= exam.id %>" class="btn btn-primary">Sınava Git</a>
            </div>
        </div>
    </div>
</div>